{
  "name": "@tsedio/root",
  "version": "1.0.0",
  "description": "Repository template to publish plugins for Ts.ED framework.",
  "private": true,
  "type": "module",
  "scripts": {
    "configure": "monorepo ci configure",
    "clean": "monorepo clean workspace",
    "test": "vitest run",
    "lint": "eslint '**/*.{ts,js}'",
    "lint:fix": "eslint '**/*.{ts,js}' --fix",
    "build": "monorepo build --verbose",
    "build:references": "node ./tools/typescript",
    "build:eslint": "node ./tools/eslint",
    "build:vitest": "node ./tools/vitest/install.js",
    "sync:packages": "monorepo sync packages",
    "release": "semantic-release",
    "release:dryRun": "semantic-release --dry-run",
    "prepare": "is-ci || husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tsedio/tsed-plugins-starter.git"
  },
  "keywords": [
    "ts",
    "log",
    "debug",
    "typescript",
    "trace",
    "plugins"
  ],
  "author": "Romain Lenzotti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsedio/tsed-plugins-starter/issues"
  },
  "homepage": "https://github.com/tsedio/tsed-plugins-starter",
  "dependencies": {
    "@tsed/core": "8.8.4",
    "@tsed/di": "8.8.4",
    "chalk": "^5.3.0",
    "execa": "8.0.1",
    "figures": "^6.1.0",
    "fs-extra": "^11.2.0",
    "globby": "14.1.0",
    "lerna": "^8.1.8",
    "lodash": "^4.17.21",
    "read-pkg-up": "^11.0.0",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@swc/core": "1.7.26",
    "@swc/helpers": "0.5.17",
    "@tsed/monorepo-utils": "2.3.12",
    "@types/node": "22.7.4",
    "@typescript-eslint/eslint-plugin": "8.7.0",
    "@typescript-eslint/parser": "8.7.0",
    "@vitest/coverage-v8": "3.1.3",
    "concurrently": "9.0.1",
    "cross-env": "7.0.3",
    "eslint": "9.11.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-workspaces": "0.10.1",
    "gflow": "^5.1.4",
    "husky": "9.1.6",
    "is-ci": "3.0.1",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "semantic-release": "24.1.2",
    "semantic-release-slack-bot": "4.0.2",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3",
    "unplugin-swc": "^1.5.1",
    "vitest": "3.1.3"
  },
  "directories": {
    "packages": "packages"
  },
  "workspaces": [
    "packages/*",
    "packages/*/*",
    "tools/*"
  ],
  "monorepo": {
    "productionBranch": "main",
    "developBranch": "main",
    "npmAccess": "public",
    "ghpages": [],
    "registries": []
  },
  "packageManager": "yarn@4.9.1"
}
